<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="mediaItem"
            type="com.example.mis_java_project.data.model.MediaItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:background="@color/material_dynamic_primary80">

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{mediaItem.title}"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingTop="16.dp"
                android:textColor="@color/material_dynamic_primary0"/>

        </LinearLayout>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LÃ¶schen"
            android:background="@color/material_dynamic_neutral100"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editieren"
            android:background="@color/material_dynamic_neutral100"
            />




    </LinearLayout>
</layout>
