<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.mis_java_project.dialog.DialogViewViewModel" />

        <variable
            name="mediaItem"
            type="com.example.mis_java_project.data.model.MediaItem" />

        <variable
            name="imageUri"
            type="android.net.Uri" />

        <variable
            name="title"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{mediaItem == null ? `Neues Medium` : `Medium editieren`}"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="48.dp"
                android:autofillHints=""
                android:focusable="true"
                android:hint="Titel"
                android:inputType="text"
                android:onTextChanged="@{(text, start, before, count) -> viewModel.onTextChanged(text)}"
                android:text="@={title}">

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/button_select_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="wa"
                android:src="@drawable/ic_picture" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/media_item_image"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="" />
    </LinearLayout>
</layout>
